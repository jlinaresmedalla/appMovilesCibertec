<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Destino"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/spinnerDestino"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modalidad"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/spinnerModalidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp" />

    <CheckBox
        android:id="@+id/checkBoxPersonaNatural"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Persona Natural"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/buttonCalcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calcular" />

    <TextView
        android:id="@+id/textViewCostoSoles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Costo en Soles: "
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/textViewCostoDolares"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Costo en DÃ³lares: " />

</LinearLayout>
